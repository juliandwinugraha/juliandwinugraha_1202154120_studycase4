<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.juliandwinugraha_1202154120_studycase4.MainActivity">

    <Button
        android:id="@+id/listMahasiswa"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="List Mahasiswa"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:onClick="allList"/>

    <Button
        android:id="@+id/listGambar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Lihat Gambar"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:onClick="lihatGambar"/>

</LinearLayout>


